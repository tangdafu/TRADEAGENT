# LLM API 配置
# API 地址（第三方供应商）
LLM_API_BASE_URL=https://api.asxs.top

# API 密钥
LLM_API_KEY=sk-your-api-key

# 模型名称
MODEL_NAME=claude-sonnet-4-5-20250929

# 温度（0-1，越低越稳定）
TEMPERATURE=0.3

# 交易对
SYMBOL=BTCUSDT

# 日志级别
LOG_LEVEL=INFO

# Binance API 配置（可选，用于获取真实爆仓数据）
# 如果不配置，系统将使用模拟爆仓数据
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# 消息面数据API配置（可选）
# CryptoCompare API - 获取加密货币新闻和社交数据
# 注册地址: https://www.cryptocompare.com/cryptopian/api-keys
CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key_here

# NewsAPI - 获取传统财经新闻
# 注册地址: https://newsapi.org/register
NEWSAPI_KEY=your_newsapi_key_here

# 行情预判配置（可选）
# 是否启用行情预判功能（true/false）
# 启用后，只有在检测到明显交易信号时才会调用AI分析，节省API调用
MARKET_SIGNAL_DETECTION_ENABLED=true

# 最少触发信号数（默认2个）
# 当触发的信号数量达到此阈值时，才会进行AI分析
MIN_SIGNAL_COUNT=2

# 资金费率变化阈值（默认0.05%）
FUNDING_RATE_CHANGE_THRESHOLD=0.0005

# 价格波动阈值（默认5%）
PRICE_CHANGE_THRESHOLD=5.0

# 成交量异常倍数（默认2倍）
VOLUME_SURGE_RATIO=2.0

# 大额爆仓事件数量阈值（默认3笔）
LARGE_LIQUIDATION_COUNT_THRESHOLD=3

# 消息面情绪得分阈值（默认±0.5）
NEWS_SENTIMENT_THRESHOLD=0.5

# 飞书告警配置（可选）
# 用于接收交易信号推送
# 创建方式：
# 1. 在飞书群聊中，点击右上角设置 -> 群机器人 -> 添加机器人 -> 自定义机器人
# 2. 设置机器人名称和描述
# 3. 复制Webhook地址
FEISHU_WEBHOOK=https://open.feishu.cn/open-apis/bot/v2/hook/your_webhook_token_here

